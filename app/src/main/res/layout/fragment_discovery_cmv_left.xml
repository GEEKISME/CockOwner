<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_cockinfo">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:id="@+id/cockImg"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dimen_4"
            android:src="@mipmap/chickenlife"/>
        <TextView
            android:visibility="gone"
            android:layout_below="@+id/cockImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_serialnumber"
            android:textColor="#333333"
            android:textSize="10sp"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_alignLeft="@+id/cockImg"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_below="@+id/tv_serialnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_chipnumber"
            android:textColor="#333333"
            android:textSize="10sp"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_alignLeft="@+id/tv_serialnumber"/>
    </RelativeLayout>>

</RelativeLayout>