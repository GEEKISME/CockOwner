<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_memo"
    android:background="@color/color_f6f5f8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.biotag.cockowner.activity.MemoActivity">
    <include layout="@layout/portrait_title_bar_similar"
        android:id="@+id/titlebar_memo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_memoinfo"
        android:layout_below="@+id/titlebar_memo"
        android:orientation="vertical"
        android:padding="10dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100"
            cardview:cardCornerRadius="@dimen/dimen_6"
            cardview:cardElevation="0dp"
            android:layout_marginTop="@dimen/dimen_15"
            >

            <EditText
                android:id="@+id/et_memo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:hint=""
                android:padding="@dimen/dimen_10"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_15"
                android:gravity="top"
                />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>
