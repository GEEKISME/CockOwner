<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:id="@+id/rl_wrapall">

    <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:cardCornerRadius="10dp"-->
        <!--app:cardElevation="2dp"-->
        <!--android:id="@+id/cardview"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true">-->
        <!---->
    <!--</android.support.v7.widget.CardView>-->

    <LinearLayout
        android:id="@+id/ll_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_15">
        <!--cock 1-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/rl_chip1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_chip1"
                android:text="cock_chip1"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/metal1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/tv_chip1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/metal1"
                android:visibility="gone"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_chip1_value"
                android:text="943000"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_f6f5f8"
            />

        <!--cock 2-->
        <RelativeLayout
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:id="@+id/rl_chip2">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_chip2"
                android:text="cock_chip2"/>
            <ImageView
                android:id="@+id/metal2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/tv_chip2"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/metal1"
                android:visibility="gone"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:id="@+id/tv_chip2_value"
                android:text="943000"/>
        </RelativeLayout>
        <View
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_f6f5f8"
            />

        <!--比赛时间-->
        <RelativeLayout
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:id="@+id/rl_createby">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_createby"
                android:text="Created On"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:id="@+id/tv_createby_value"
                android:text="943000"/>
        </RelativeLayout>
        <View
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_f6f5f8"
            />

        <!--协会名称-->
        <RelativeLayout
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/rl_orgname">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_orgname"
                android:text="Federation of winner"/>
            <com.biotag.cockowner.customview.MyTextView
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="right"
                android:layout_centerVertical="true"
                android:ems="10"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tv_orgname_value"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/aline_orgname"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_f6f5f8"
            />

        <!--记录人-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="13dp"
            android:id="@+id/rl_creatorUser">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_creatoruser"
                android:layout_centerVertical="true"
                android:text="Recorder"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/tv_creatoruser_value"
                android:text="94300000"/>
        </RelativeLayout>
        <View
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_f6f5f8"
            />

        <!--获胜斗鸡选择-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="13dp"
            android:id="@+id/rl_wincock_choose">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_wincock1"
                android:text="Winner"/>
            <RadioGroup
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/rg_wincock"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:tag="1"
                    android:checked="true"
                    android:id="@+id/radiobtn_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="cock A"/>
                <RadioButton
                    android:tag="2"
                    android:id="@+id/radiobtn_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="cock B"/>
            </RadioGroup>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/tv_wincock1_value"
                android:text="Undetermined"
                android:textStyle="bold|italic"
                android:textColor="@color/advance_red"/>
        </RelativeLayout>
        <View
            android:id="@+id/aline_wincock"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_f6f5f8"
            />

        <!--比赛结果生成时间-->
        <RelativeLayout
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:id="@+id/rl_resulttime">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_resulttime"
                android:text="Game Date"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:id="@+id/tv_resulttime_value"
                android:text="943000"/>
        </RelativeLayout>
        <View
            android:id="@+id/aline_gameresult"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_f6f5f8"
            />

        <!--提交比赛结果的按钮-->
        <Button
            android:id="@+id/btn_postwincock"
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/backing_backgrd"
            />
    </LinearLayout>

</RelativeLayout>