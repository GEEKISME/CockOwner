<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_record_cock_info_part_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_f6f5f8"
    tools:context="com.biotag.cockowner.activity.InputCockInfo">
    <include layout="@layout/portrait_title_bar_similar"
        android:id="@+id/titlebar_recordcockinfopartone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/dimen_10"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16"
            android:maxLength="16"
            android:singleLine="true"
            />

        <ImageView
            android:clickable="true"
            android:id="@+id/iv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/clear_word"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
</LinearLayout>
