<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="300dp"
              android:layout_height="200dp"
              android:background="@drawable/shape_round_white"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingTop="5dp">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Gamefowl Weight"
        android:textSize="20sp"
        android:textColor="@color/advance_red"/>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/rl_inputweight"
        android:layout_marginTop="20dp">
        <EditText
            android:id="@+id/editText"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/shape_round_gray_bored"
            android:ems="10"
            android:hint=""
            android:inputType="numberDecimal|number"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/a5"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kg"
            android:textColor="@color/advance_red"
            android:textSize="22sp"
            android:layout_alignBottom="@+id/editText"
            android:layout_toRightOf="@+id/editText"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>


    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="#D9D9D9"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Ok"
            android:textColor="#333333"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#D9D9D9"/>

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/hot_pink"
            android:textSize="16dp"/>
    </LinearLayout>
</LinearLayout>
