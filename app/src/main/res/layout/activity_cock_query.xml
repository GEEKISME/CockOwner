<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cock_query"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.biotag.cockowner.activity.CockQueryActivity">
    <include layout="@layout/portrait_title_bar_similar"
        android:id="@+id/titlebar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_alignParentBottom="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:paddingTop="30dp">
            <RelativeLayout
                android:id="@+id/wrap_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                >
                <RelativeLayout
                    android:id="@+id/wrap_til_1"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    >
                    <EditText
                        android:id="@+id/et_chipcode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:textColor="@color/color_333333"
                        android:textColorHint="@color/color_999999"
                        android:maxLines="1"
                        android:maxLength="16"
                        android:background="@color/transparent"/>
                </RelativeLayout>
                <View
                    android:id="@+id/horizontalline"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/wrap_til_1"
                    android:background="@color/subscribe_item_disabled_stroke"/>
                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/wrap_barscan"
                    android:layout_alignBottom="@+id/horizontalline">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/scaningbarcode"
                        android:src="@mipmap/x_scan"
                        />
                </RelativeLayout>
                <RadioGroup
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/rg_derbygroup"
                    android:layout_below="@+id/tv_derby"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_alignLeft="@+id/tv_phase">
                    <RadioButton
                        android:checked="true"
                        android:id="@+id/rbd1"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:tag="1"
                        android:button="@drawable/levelcheckimg"
                        android:text="BULLANG BULLANG"
                        android:textColor="@drawable/levelcheck"
                        />
                    <RadioButton
                        android:id="@+id/rbd2"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:tag="2"
                        android:button="@drawable/levelcheckimg"
                        android:text="President's Cup"
                        android:textColor="@drawable/levelcheck"/>
                    <RadioButton
                        android:id="@+id/rbd3"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:tag="3"
                        android:button="@drawable/levelcheckimg"
                        android:text="SABAYAN"
                        android:textColor="@drawable/levelcheck"
                        />
                    <RadioButton
                        android:id="@+id/rbd4"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:tag="4"
                        android:button="@drawable/levelcheckimg"
                        android:text="All"
                        android:textColor="@drawable/levelcheck"/>
                </RadioGroup>
                <View
                    android:visibility="gone"
                    android:id="@+id/horizontalline_3"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/subscribe_item_disabled_stroke"/>
                <!--Regdate 的阶段-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_phase"
                    android:layout_below="@+id/horizontalline"
                    android:text=""
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"/>
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rg_stagegroup"
                    android:layout_below="@+id/tv_phase"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_alignLeft="@+id/tv_phase">
                    <RadioButton
                        android:checked="true"
                        android:id="@+id/rb1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:tag="1"
                        android:button="@drawable/levelcheckimg"
                        android:text="1st"
                        android:textColor="@drawable/levelcheck"
                        />
                    <RadioButton
                        android:id="@+id/rb2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:tag="2"
                        android:button="@drawable/levelcheckimg"
                        android:text="2nd"
                        android:textColor="@drawable/levelcheck"/>
                    <RadioButton
                        android:id="@+id/rb3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:tag="3"
                        android:button="@drawable/levelcheckimg"
                        android:text="3rd"
                        android:textColor="@drawable/levelcheck"
                        />
                    <RadioButton
                        android:id="@+id/rb4"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:tag="4"
                        android:button="@drawable/levelcheckimg"
                        android:text="All"
                        android:textColor="@drawable/levelcheck"/>
                </RadioGroup>
                <View
                    android:id="@+id/horizontalline_2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/rg_stagegroup"
                    android:layout_marginTop="2dp"
                    android:background="@color/subscribe_item_disabled_stroke"/>

                <!--status 的状态-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_status"
                    android:layout_below="@+id/horizontalline_2"
                    android:text=""
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rg_statugroup"
                    android:layout_below="@+id/tv_status"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_alignLeft="@+id/tv_status">
                    <RadioButton
                        android:checked="true"
                        android:id="@+id/rbs1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:tag="1"
                        android:button="@drawable/levelcheckimg"
                        android:text="Normal"
                        android:textColor="@drawable/levelcheck"
                        />
                    <RadioButton
                        android:id="@+id/rbs2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:tag="2"
                        android:button="@drawable/levelcheckimg"
                        android:text="Abort"
                        android:textColor="@drawable/levelcheck"/>
                    <RadioButton
                        android:id="@+id/rbs3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:tag="3"
                        android:button="@drawable/levelcheckimg"
                        android:text="Lost"
                        android:textColor="@drawable/levelcheck"
                        />
                    <RadioButton
                        android:id="@+id/rbs4"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:tag="4"
                        android:button="@drawable/levelcheckimg"
                        android:text="All"
                        android:textColor="@drawable/levelcheck"
                        />
                </RadioGroup>
                <View
                    android:id="@+id/horizontalline_4"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/rg_statugroup"
                    android:layout_marginTop="2dp"
                    android:background="@color/subscribe_item_disabled_stroke"/>
                <!--derby 选择-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_derbys"
                    android:layout_below="@+id/horizontalline_4"
                    android:text="Derby"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>
                <org.angmarch.views.NiceSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_derbys"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_alignLeft="@+id/tv_derbys"
                    android:id="@+id/nicespinner"/>
            </RelativeLayout>
            <Button
                android:id="@+id/btn_query"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20sp"
                android:text="Query"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="16sp"
                android:background="@drawable/query_bg"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
